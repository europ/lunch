<div id="accordion">
  <% @menus.each do |menu| -%>
    <div class="card mb-1 bg-light">
      <div class="card-header" id="heading<%= menu[:id] %>">
        <h5 class="mb-0">
          <button class="btn btn-link" data-toggle="collapse" data-target="#collapse<%= menu[:id] %>" aria-expanded="true" aria-controls="collapse<%= menu[:id] %>">
            <%= menu[:name] %>
          </button>
        </h5>
      </div>
      <div id="collapse<%= menu[:id] %>" class="collapse" aria-labelledby="heading<%= menu[:id] %>" data-parent="#accordion">
        <div class="card-body">
          <%= simple_format(menu[:content]) %>
        </div>
      </div>
    </div>
  <% end -%>
</div>
