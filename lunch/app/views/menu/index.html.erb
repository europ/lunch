<div id="accordion">
  <% @menus.each do |menu| -%>
    <div class="card mb-1 bg-light">
      <div class="card-header" id="heading<%= menu[:id] %>">
        <div class="mb-0">
          <button class="btn btn-outline-primary" data-toggle="collapse" data-target="#collapse<%= menu[:id] %>" aria-expanded="true" aria-controls="collapse<%= menu[:id] %>">
            <%= menu[:name] %>
          </button>
          <a href="<%= menu[:url] %>">
            <button class="btn btn-outline-dark float-right">
              Source
            </button>
          </a>
        </div>
      </div>
      <div id="collapse<%= menu[:id] %>" class="collapse" aria-labelledby="heading<%= menu[:id] %>" data-parent="#accordion">
        <div class="card-body">
          <%= simple_format(menu[:content]) %>
        </div>
      </div>
    </div>
  <% end -%>
</div>
